{
  "manifest_version": 3,
  "name": "Gemini Watermark Remover",
  "version": "3.0.0",
  "description": "Remove Gemini watermarks locally using AI - 100% privacy-focused, no data sent to servers",
  "author": "Your Name",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Gemini Watermark Remover",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "offline_enabled": true
}
